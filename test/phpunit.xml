<phpunit bootstrap="./Bootstrap.php" colors="true">
    <testsuites>
        <testsuite name="SpeckCart module tests">
            <directory>./SpeckCartTest</directory>
        </testsuite>
    </testsuites>
    <filter>
        <whitelist>
            <directory suffix=".php">../src</directory>
        </whitelist>
    </filter>
    <listeners>
        <listener class="Mockery\Adapter\Phpunit\TestListener"></listener>
    </listeners>
</phpunit>
